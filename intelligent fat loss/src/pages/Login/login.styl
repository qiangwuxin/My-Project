/* src/pages/Login/style.styl */
@import '../../styles/variables.styl'

.login-container
  display: flex
  min-height: 100vh
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%)

.login-left
  flex: 1
  background: linear-gradient(135deg, $primary-color, #1a5f9e)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  padding: 40px
  color: white
  text-align: center
  position: relative
  overflow: hidden
  
  &::before
    content: ""
    position: absolute
    top: -50%
    right: -50%
    width: 200%
    height: 200%
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%)
  
  .logo
    margin-bottom: 30px
    z-index: 1
    
    img
      width: 120px
      height: auto
    
    h1
      font-size: 32px
      margin-top: 15px
      font-weight: 600
  
  .slogan
    font-size: 20px
    max-width: 500px
    margin-bottom: 40px
    z-index: 1
    line-height: 1.5
  
  .features
    display: flex
    flex-wrap: wrap
    justify-content: center
    gap: 30px
    max-width: 700px
    z-index: 1
    
    .feature
      flex: 0 0 calc(50% - 30px)
      display: flex
      flex-direction: column
      align-items: center
      
      .icon
        background: rgba(255, 255, 255, 0.2)
        width: 70px
        height: 70px
        border-radius: 50%
        display: flex
        align-items: center
        justify-content: center
        margin-bottom: 15px
        
        i
          font-size: 30px
      
      h3
        font-size: 18px
        margin-bottom: 8px
      
      p
        font-size: 14px
        opacity: 0.9

.login-right
  flex: 1
  display: flex
  justify-content: center
  align-items: center
  padding: 40px
  background: white
  
  .login-form
    width: 100%
    max-width: 450px
    
    h2
      font-size: 28px
      margin-bottom: 10px
      color: $text-primary
    
    .subtitle
      color: $text-secondary
      margin-bottom: 30px
    
    .form-group
      margin-bottom: 20px
      
      .input-with-icon
        position: relative
        
        i
          position: absolute
          left: 15px
          top: 50%
          transform: translateY(-50%)
          color: $text-secondary
        
        input
          width: 100%
          padding: 12px 15px
          padding-left: 45px
          border: 1px solid $border-color
          border-radius: 8px
          font-size: 16px
          transition: border 0.3s
          &:focus
            border-color: $primary-color
            outline: none
            box-shadow: 0 0 0 2px rgba($primary-color, 0.2)
    
    .remember-forgot
      display: flex
      justify-content: space-between
      align-items: center
      margin-bottom: 20px
      
      .remember
        display: flex
        align-items: center
        
        input
          margin-right: 8px
        
        label
          font-size: 14px
          color: $text-secondary
      
      .forgot-password
        color: $primary-color
        font-size: 14px
        transition: color 0.3s
        
        &:hover
          color: darken($primary-color, 15%)
    
    .login-btn
      width: 100%
      padding: 14px
      background: $primary-color
      color: white
      border: none
      border-radius: 8px
      font-size: 16px
      font-weight: 500
      cursor: pointer
      transition: background 0.3s
      
      &:hover
        background: darken($primary-color, 10%)
    
    .divider
      display: flex
      align-items: center
      margin: 25px 0
      
      span
        padding: 0 15px
        color: $text-secondary
      
      &::before, &::after
        content: ""
        flex: 1
        height: 1px
        background: $border-color
    
    .social-login
      display: flex
      justify-content: center
      gap: 15px
      margin-bottom: 25px
      
      .social-btn
        width: 50px
        height: 50px
        border-radius: 50%
        display: flex
        align-items: center
        justify-content: center
        border: 1px solid $border-color
        background: white
        transition: all 0.3s
        
        i
          font-size: 20px
          color: $text-secondary
        
        &:hover
          background: #f8f9fa
          transform: translateY(-2px)
    
    .register-link
      text-align: center
      color: $text-secondary
      
      a
        color: $primary-color
        margin-left: 5px
        font-weight: 500
        transition: color 0.3s
        
        &:hover
          color: darken($primary-color, 15%)

@media (max-width: 992px)
  .login-container
    flex-direction: column
    
  .login-left
    padding: 30px 20px
    order: 2
    min-height: auto
    
    .features
      display: none
  
  .login-right
    order: 1
    padding: 40px 20px

@media (max-width: 576px)
  .login-right
    .login-form
      h2
        font-size: 24px
      
      .remember-forgot
        flex-direction: column
        align-items: flex-start
        gap: 10px